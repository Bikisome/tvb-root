<Lems description="A number of ComponentTypes for rate based/population models.
                    Base type of any cell/population which has a (dimensionless) rate _R.
                    Reduced Wong Wang model.">

    <ComponentType name="derivatives">

        <!-- Parameters will be assumed to be swept. sweep data will be matched by order of entry -->
        <Parameter name="global_speed" dimension='float'/>
        <Parameter name="global_coupling" dimension='float'/>

        <DerivedParameter name="rec_n" value="1 / n_node"/>
        <!-- If rec_speed_dt not is defined or is zero, then no delays will be fetched -->
        <DerivedParameter name="rec_speed_dt" value="0"/>
        <DerivedParameter name="nsig" value="sqrt(dt) * sqrt(2.0 * 1e-5)"/>

        <Constant name="w_plus" dimension="" value="1.4f" description="Excitatory population recurrence weight"/>
        <Constant name="a_E" dimension="" value="310.0f" description="[n/C]. Excitatory population input gain parameter, chosen to fit numerical solutions."/>
        <Constant name="b_E" dimension="" value="125.0f" description="[Hz]. Excitatory population input shift parameter chosen to fit numerical solutions."/>
        <Constant name="d_E" dimension="" value="0.154f" description="[s]. Excitatory population input scaling parameter chosen to fit numerical solutions."/>
        <Constant name="a_I" dimension="" value="615.0f" description="[n/C]. Inhibitory population input gain parameter, chosen to fit numerical solutions."/>
        <Constant name="b_I" dimension="" value="177.0f" description="[Hz]. Inhibitory population input shift parameter chosen to fit numerical solutions."/>
        <Constant name="d_I" dimension="" value="0.087f" description="[s]. Inhibitory population input scaling parameter chosen to fit numerical solutions."/>
        <Constant name="gamma_E" dimension="" value="0.641f / 1000.0f" description="Excitatory population kinetic parameter"/>
        <Constant name="tau_E" dimension="" value="100.0f" description="[ms]. Excitatory population NMDA decay time constant."/>
        <Constant name="tau_I" dimension="" value="10.0f" description="[ms]. Inhibitory population NMDA decay time constant."/>
        <Constant name="I_0" dimension="" value="0.382f" description="[nA]. Effective external input"/>
        <Constant name="w_E" dimension="" value="1.0f" description="Excitatory population external input scaling weight"/>
        <Constant name="w_I" dimension="" value="0.7f" description="Inhibitory population external input scaling weight"/>
        <Constant name="gamma_I" dimension="" value="1.0f / 1000.0f" description="Inhibitory population kinetic parameter"/>
        <Constant name="min_d_E" dimension="" value="-1.0f * d_E" description="Only in CUDA"/>
        <Constant name="min_d_I" dimension="" value="-1.0f * d_I" description="Only in CUDA"/>
        <Constant name="imintau_E" dimension="" value="-1.0f / tau_E" description="Only in CUDA"/>
        <Constant name="imintau_I" dimension="" value="-1.0f / tau_I" description="Only in CUDA"/>
        <Constant name="w_E__I_0" dimension="" value="w_E * I_0" description="Only in CUDA"/>
        <Constant name="w_I__I_0" dimension="" value="w_I * I_0" description="Only in CUDA"/>

        <Constant name="J_N" dimension="" value="0.15" description="[nA] NMDA current"/>
        <Constant name="J_I" dimension="" value="1.0" description="[nA] Local inhibitory current"/>
        <Constant name="G" dimension="" value="2.0" description="Global coupling scaling"/>
        <Constant name="lamda" dimension="" value="0.0" description="Inhibitory global coupling scaling"/>

        <!-- Unpack params -->
        <Constant name="J_NMDA" dimension="" value="0.15" description=""/>
        <Constant name="JI" dimension="" value="1.0" description=""/>
        <Constant name="J_NMDA" dimension="" value="0.15" description=""/>
        <Constant name="G_J_NMDA" dimension="" value="G*J_NMDA" description=""/>
        <Constant name="w_plus__J_NMDA" dimension="" value="w_plus * J_NMDA" description=""/>

        <!-- Exposures are used for observables, for the name enter variable to be observed (usually states)
        and for dimension enter the reduction functionality-->
        <Exposure name="V" dimension="{V^2}"/>

        <Dynamics>
            <StateVariable name="V" dimension="" exposure="0.0000001, 1"/>
            <StateVariable name="W" dimension="" exposure="0.0000001, 1"/>

            <DerivedVariable name="tmp_I_E" value="a_E * (w_E__I_0 + w_plus__J_NMDA * V + c_0 - JI*W) - b_E"/>
            <DerivedVariable name="tmp_H_E" value="tmp_I_E/(1.0-exp(min_d_E * tmp_I_E))"/>
            <DerivedVariable name="tmp_I_I" value="(a_I*((w_I__I_0+(J_NMDA * V))-W))-b_I"/>
            <DerivedVariable name="tmp_H_I" value="tmp_I_I/(1.0-exp(min_d_I*tmp_I_I))"/>

            <TimeDerivative variable="dV" value="(imintau_E* V)+(tmp_H_E*(1-V)*gamma_E)"/>
            <TimeDerivative variable="dW" value="(imintau_I* W)+(tmp_H_I*gamma_I)"/>
        </Dynamics>

    </ComponentType>

    <ComponentType name="coupling_function">

        <!-- variables for pre synaptic function-->
        <Parameter name="V_j" dimension='0'/>
        <!--        post coupling expression, needs to be present. If no temporary result needs to be computed enter 'None'-->
        <DerivedParameter name="c_0" value="{V^2}"/>

        <Constant name="a" dimension="" value="1" description="Rescales the connection strength."/>

    <Dynamics>
        <DerivedVariable name="pre" value="V_j * G_J_NMDA"/>
        <DerivedVariable name="post" value="a"/>
    </Dynamics>

    </ComponentType>

    <ComponentType name="noise" description="on">
    </ComponentType>

</Lems>